<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_padding_vertical"
                android:paddingStart="@dimen/activity_padding_horizontal"
                android:paddingEnd="@dimen/activity_padding_horizontal"
                android:paddingTop="@dimen/activity_padding_vertical">

    <Button
        android:id="@+id/bt_wizard_done"
        android:layout_width="@dimen/wizard_button_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/wizard_button_height"
        android:minWidth="@dimen/wizard_button_width"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:text="@android:string/ok"
        android:textColor="@color/sony_black"
        android:textSize="@dimen/text_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_wizard_done"
        android:gravity="top"
        android:scrollbarStyle="outsideInset" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="sans-seriff"
                android:scrollbars="vertical"
                android:id="@+id/more_info_tv1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/wizard_font_size_large"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="sans-seriff"
                android:scrollbars="vertical"
                android:id="@+id/more_info_tv2"
                android:textColor="@color/sony_gray_text"
                android:textSize="@dimen/wizard_font_size_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="sans-seriff"
                android:scrollbars="vertical"
                android:id="@+id/more_info_tv3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/wizard_font_size_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:textAlignment="viewStart"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>